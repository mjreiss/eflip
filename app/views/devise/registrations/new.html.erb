<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<div class="row">
  		<div class="col-sm-6">
		  	<%= f.input :first_name, class: "form-control input-group-lg reg_name", required: true, autofocus: true %>
		</div>
		<div class="col-sm-6">
		  	<%= f.input :last_name, class: "form-control input-group-lg reg_name", required: true %>
		</div>
		<div class="col-sm-12">
		    <%= f.input :email, class: "form-control input-group-lg", required: true %>
		</div>
		<div class="col-sm-12">
		    <%= f.input :password, class: "form-control input-group-lg", required: true, hint: 
		    			("#{@minimum_password_length} characters minimum" if @validatable) %>
		</div>
		<div class="col-sm-12">
		    <%= f.input :password_confirmation, class: "form-control input-group-lg", required: true %>
		</div>
	</div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>